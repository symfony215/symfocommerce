{% extends '@Shop/layout.html.twig' %}

{% block title %}
    {{ good.name }}
{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/shop/fancybox/jquery.fancybox.css') }}" media="all" rel="stylesheet"
          type="text/css"/>
{% endblock stylesheets %}

{% block page_content -%}
    <div class="row">
        <div class="col-md-5">
            <div class="thumbnail">
                {% if good.images | length %}
                    <a href="{{ asset(('uploads/gallery/' ~ good.images.first().path)) }}" class="fancybox" rel="group">
                        <img class="group list-group-image"
                             src="{{ asset( ('uploads/gallery/' ~ good.images.first().path) | imagine_filter('good_main_thumb')) }}"
                             alt="{{ good.name }}"/>
                    </a>
                {% else %}
                    <img class="group list-group-image"
                         src="{{ asset( ('uploads/gallery/no_image_available.png') | imagine_filter('good_main_thumb')) }}"
                         alt="{{ good.name }}"/>
                {% endif %}
            </div>
        </div>
        <div class="col-md-7">
            <div class="caption">
                <h1 class="group inner list-group-item-heading">{{ good.name }}</h1>
                <p class="lead">{{ good.price }} ั.ะต.</p>
                <p>
                    <a class="btn btn-success" href="#">Add to cart</a>
                </p>
                <div class="row">
                    {% if good.images | length %}
                        {% for image in good.images|slice(1) %}
                            <div class="col-xs-6 col-md-3">
                                <a href="{{ asset(('uploads/gallery/' ~ image.path)) }}" class="thumbnail fancybox" rel="group">
                                    <img class="group list-group-image"
                                         src="{{ asset( ('uploads/gallery/' ~ image.path) | imagine_filter('good_preview_thumb')) }}"
                                         alt="{{ good.name }}"/>
                                </a>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="row well well-lg">
        <h3 class="group inner list-group-item-heading">{{ good.name }}</h3>
        <div class="caption">
            <p class="group inner list-group-item-text">
                {{ good.description }}
            </p>
        </div>
    </div>
{% endblock page_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/shop/fancybox/jquery.mousewheel-3.0.6.pack.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('bundles/shop/fancybox/jquery.fancybox.pack.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $(".fancybox").fancybox();
        });
    </script>
{% endblock javascripts %}