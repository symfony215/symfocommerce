{% extends '@Shop/layout.html.twig' %}

{% block title %}
    EShop - Categories
{% endblock title %}

{% block page_content -%}
    <div id="products" class="row list-group">
        {% for category in categories %}
            <div class="item  col-sm-4 col-md-3 col-lg-3">
                <div class="thumbnail">
                    <a href="{{ path('category', {'id' : category.id}) }}">
                        {% if category.path %}
                            <img class="group list-group-image"
                                 src="{{ asset( ('uploads/images/' ~ category.path) | imagine_filter('category_mainpage_thumb')) }}"
                                 alt="{{ category.name }}"/>
                        {% else %}
                            <img class="group list-group-image"
                                 src="{{ asset( ('uploads/images/no_image_available.png') | imagine_filter('category_mainpage_thumb')) }}"
                                 alt="{{ category.name }}"/>
                        {% endif %}
                    </a>

                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">
                            <a href="{{ path('category', {'id' : category.id}) }}">{{ category.name }}</a>
                        </h4>
                        <p class="group inner list-group-item-text">
                            {{ category.description|slice(0, 190) }}
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock page_content %}