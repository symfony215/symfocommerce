{% extends '@Admin/adminLayout.html.twig' %}

{% block title %}
    {{ 'Featured products list'|trans }} - {{ 'Administration panel'|trans }}
{% endblock title %}

{% block page_content -%}
    <h3>{{ 'Featured products list'|trans }}</h3>
    <table class="records_list table table-striped">
        <thead>
        <tr>
            <th class="col-md-2">{{ 'Order No'|trans }}</th>
            <th class="col-md-3">{{ 'Name'|trans }}</th>
            <th class="col-md-2">{{ 'Price'|trans }}</th>
            <th class="col-md-2">{{ 'Q-ty'|trans }}</th>
            <th class="col-md-3">{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in products %}
            <tr>
                <td>{{ entity.productOrder }}</td>
                <td><a href="{{ path('admin_product_show', { 'id': entity.id }) }}">{{ entity.product.name }}</a></td>
                <td>{{ entity.product.price }}</td>
                <td>{{ entity.product.quantity }}</td>
                <td>
                    <a href="{{ path('admin_product_edit', { 'id': entity.id }) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock page_content %}
