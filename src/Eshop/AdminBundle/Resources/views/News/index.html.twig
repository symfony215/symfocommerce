{% extends '@Admin/adminLayout.html.twig' %}

{% block page_content -%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% include "@Admin/Admin/admin-menu.html.twig" %}
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h3>{{ 'News list'|trans }}</h3>
                <li>
                    <a href="{{ path('admin_news_new') }}">
                        {{ 'Create a new news'|trans }}
                    </a>
                </li>
                <table class="records_list table table-bordered table-stripped">
                    <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(entities, 'Title'|trans, 'a.title') }}</th>
                        <th>{{ 'Text'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>
                                <a href="{{ path('admin_news_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                            </td>
                            <td>
                                {{ entity.text|slice(0, 130) }}...
                            </td>
                            <td>
                                <a href="{{ path('admin_news_show', { 'id': entity.id }) }}">{{ 'show'|trans }}</a>&nbsp;&nbsp;
                                <a href="{{ path('admin_news_edit', { 'id': entity.id }) }}">{{ 'edit'|trans }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-12">
                        {{ knp_pagination_render(entities) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock page_content %}