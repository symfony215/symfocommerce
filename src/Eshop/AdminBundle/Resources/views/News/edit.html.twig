{% extends '@Admin/adminLayout.html.twig' %}
{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block page_content -%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% include "@Admin/Admin/admin-menu.html.twig" %}
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-5 col-md-offset-2 main">
                <h3>News edit</h3>

                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success" role="alert">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                <form action="{{ path('admin_news_update', {'id' : entity.id}) }}" {{ form_enctype(edit_form) }} class="form-horizontal" method="post">
                    <div class="form-group">
                        {{ form_label(edit_form.title, 'Title:') }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.title, {'attr': {'class': 'product-name'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.text, 'Text:') }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.text) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.metaKeys, 'Meta keys:') }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.metaKeys) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.metaDescription, 'Meta description:') }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.metaDescription) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <a href="#" class="btn btn-default generate-slug">generate slug</a>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.slug, 'Slug:') }}
                        <div class="col-sm-10">
                            {{ form_errors(edit_form.slug) }}
                            {{ form_widget(edit_form.slug, {'attr': {'class': 'product-slug'}}) }}
                        </div>
                    </div>
                    <input type='hidden' name='_method' value='PUT'>
                    {{ form_rest(edit_form) }}

                </form>

                <div class="col-md-5 col-md-offset-2 ">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="{{ path('admin_news') }}">
                                Back to the list
                            </a>
                        </li>
                        <li class="list-group-item">
                            {{ form(delete_form) }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock page_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/shop/js/speakingurl.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.generate-slug').on('click', function(e) {
                e.preventDefault();
                //get field value
                var productName = $('.product-name').val();
                var slugInut = $('.product-slug');
                var nameToSlug = productName;

                //generate slug
                var slug = getSlug(nameToSlug, {
                    custom: {
                        '%': ' percent '
                    },
                    uric:true
                });
                //record to slug input
                slugInut.val(slug);
            });
        });
    </script>
{% endblock javascripts %}