{% extends '@Admin/adminLayout.html.twig' %}

{% block page_content -%}
    <h3>{{ 'User list'|trans }}</h3>

    <table class="records_list table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(entities, 'Username'|trans, 'a.username') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Email'|trans, 'a.email') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Registration date'|trans, 'a.joinDate') }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    {{ entity.username }}
                </td>
                <td>
                    {{ entity.email }}
                </td>
                <td>
                    {{ entity.joinDate|date('Y-m-d H:i') }}
                </td>
                <td>
                    #
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-12">
            {{ knp_pagination_render(entities) }}
        </div>
    </div>
{% endblock page_content %}
