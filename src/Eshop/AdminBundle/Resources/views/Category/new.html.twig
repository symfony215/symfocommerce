{% extends '@Admin/adminLayout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block page_content -%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% include "AdminBundle:Admin:admin-menu.html.twig" %}
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-5 col-md-offset-2 main">
                <h3>Category creation</h3>

                <form action="{{ path('admin_category_create') }}" {{ form_enctype(form) }} class="form-horizontal" method="post">
                    <div class="form-group">
                        {{ form_label(form.name, 'Name:') }}
                        <div class="col-sm-10">
                            {{ form_widget(form.name, {'attr': {'class': 'product-name'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description, 'Description:') }}
                        <div class="col-sm-10">
                            {{ form_widget(form.description) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.file, 'Image:') }}
                        <div class="col-sm-10">
                            {{ form_widget(form.file) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.metaKeys, 'Meta keys:') }}
                        <div class="col-sm-10">
                            {{ form_widget(form.metaKeys) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.metaDescription, 'Meta description:') }}
                        <div class="col-sm-10">
                            {{ form_widget(form.metaDescription) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <a href="#" class="btn btn-default generate-slug">generate slug</a>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.slug, 'Slug:') }}
                        <div class="col-sm-10">
                            {{ form_errors(form.slug) }}
                            {{ form_widget(form.slug, {'attr': {'class': 'product-slug'}}) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}

                </form>

                <a href="{{ path('admin_category') }}">
                    Back to the list
                </a>
            </div>
        </div>
    </div>
{% endblock page_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/shop/js/speakingurl.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.generate-slug').on('click', function(e) {
                e.preventDefault();
                //get field value
                var productName = $('.product-name').val();
                var slugInut = $('.product-slug');
                var nameToSlug = productName;

                //generate slug
                var slug = getSlug(nameToSlug, {
                    custom: {
                        '%': ' percent '
                    },
                    uric:true
                });
                //record to slug input
                slugInut.val(slug);
            });
        });
    </script>
{% endblock javascripts %}