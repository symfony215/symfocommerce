{% extends '@Admin/adminLayout.html.twig' %}

{% block page_content -%}
    <h3>{{ 'Manufacturer list'|trans }}</h3>
    <li>
        <a href="{{ path('admin_manufacturer_new') }}">
            {{ 'Create a new manufacturer'|trans }}
        </a>
    </li>
    <table class="records_list table table-bordered table-stripped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(entities, 'Name'|trans, 'a.name') }}</th>
            <th>{{ 'Description'|trans }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Photo'|trans, 'a.path') }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('admin_manufacturer_show', { 'id': entity.id }) }}">{{ entity.name }}</a>
                </td>
                <td>
                    {{ entity.description }}
                </td>
                <td>
                    {% if entity.path %}
                        <img src="{{ asset( ('uploads/images/' ~ entity.path) | imagine_filter('some_thumb')) }}"/>
                    {% else %}
                        {{ 'no photos'|trans }}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_manufacturer_show', { 'id': entity.id }) }}">{{ 'show'|trans }}</a>&nbsp;&nbsp;
                    <a href="{{ path('admin_manufacturer_edit', { 'id': entity.id }) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-12">
            {{ knp_pagination_render(entities) }}
        </div>
    </div>
{% endblock page_content %}
