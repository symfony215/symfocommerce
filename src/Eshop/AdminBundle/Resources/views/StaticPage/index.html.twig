{% extends '@Admin/adminLayout.html.twig' %}

{% block page_content -%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% include "@Admin/Admin/admin-menu.html.twig" %}
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h3>{{'Static pages'|trans }}</h3>
                <li>
                    <a href="{{ path('admin_staticpage_new') }}">
                        {{ 'Create a new page'|trans }}
                    </a>
                </li>
                <table class="records_list table table-bordered table-stripped">
                    <thead>
                    <tr>
                        <th>{{ 'Title'|trans }}</th>
                        <th>{{ 'Page order'|trans }}</th>
                        <th>{{ 'Enabled'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>
                                <a href="{{ path('admin_staticpage_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                            </td>
                            <td>
                                {{ entity.orderNum }}
                            </td>
                            <td>
                                {% if entity.enabled %}
                                    {{ 'yes'|trans }}
                                {% else %}
                                    {{ 'no'|trans }}
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('admin_staticpage_show', { 'id': entity.id }) }}">{{ 'show'|trans }}</a><br>
                                <a href="{{ path('admin_staticpage_edit', { 'id': entity.id }) }}">{{ 'edit'|trans }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock page_content %}