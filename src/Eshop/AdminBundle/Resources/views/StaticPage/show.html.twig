{% extends '@Admin/adminLayout.html.twig' %}

{% block page_content -%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% include "@Admin/Admin/admin-menu.html.twig" %}
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-5 col-md-offset-2 main">
                <h3>{{ 'Static page'|trans }}</h3>

                <table class="record_properties table table-bordered table-stripped">
                    <tbody>
                    <tr>
                        <th>{{ 'Title'|trans }}</th>
                        <td>{{ entity.title }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Enabled'|trans }}</th>
                        <td>
                            {% if entity.enabled %}
                                {{ 'yes'|trans }}
                            {% else %}
                                {{ 'no'|trans }}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>{{ 'Page order'|trans }}</th>
                        <td>{{ entity.orderNum }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Content'|trans }}</th>
                        <td>{{ entity.content }}</td>
                    </tr>
                    </tbody>
                </table>

                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="{{ path('admin_staticpage') }}">
                            {{ 'Back to the list'|trans }}
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="{{ path('admin_staticpage_edit', { 'id': entity.id }) }}">
                            {{ 'Edit'|trans }}
                        </a>
                    </li>
                    <li class="list-group-item">
                        {{ form(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock page_content %}