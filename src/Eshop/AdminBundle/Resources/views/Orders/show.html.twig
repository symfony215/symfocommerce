{% extends '@Admin/adminLayout.html.twig' %}

{% block page_content -%}
    <h3>Order</h3>

    <table class="record_properties table table-bordered table-stripped">
        <tbody>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'Client Name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'Email'|trans }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{{ 'Phone'|trans }}</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>{{ 'Address'|trans }}</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>{{ 'Comment'|trans }}</th>
            <td>
                {% if entity.comment|length %}
                    {{ entity.comment }}
                {% else %}
                    <p class="text-muted">{{ 'No comment'|trans }}</p>
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('admin_orders') }}">
                {{ 'Back to the list'|trans }}
            </a>
        </li>
        <li class="list-group-item">
            {{ form(delete_form) }}
        </li>
    </ul>
{% endblock page_content %}