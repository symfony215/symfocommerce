{% extends '@Admin/adminLayout.html.twig' %}

{% block page_content -%}
    <h3>{{ 'Orders list'|trans }}</h3>
    {% if entities|length %}
        <table class="records_list table table-bordered table-stripped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(entities, 'Client name'|trans, 'a.name') }}</th>
                <th>{{ knp_pagination_sortable(entities, 'Order date'|trans, 'a.date') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            <a href="{{ path('admin_order_show', { 'id': entity.id }) }}">{{ entity.name }}</a>
                        </td>
                        <td>
                            {{ entity.date|date('Y-m-d H:i') }}
                        </td>
                        <td>
                            <a href="{{ path('admin_order_show', { 'id': entity.id }) }}">{{ 'Show'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <strong>{{ 'No orders yet'|trans }}</strong>
    {% endif %}
    <div class="row">
        <div class="col-md-12">
            {{ knp_pagination_render(entities) }}
        </div>
    </div>
{% endblock page_content %}
